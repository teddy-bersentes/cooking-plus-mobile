{
	"compilerOptions": {
		"strict": true,
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"jsx": "react-native",
		"module": "es2015",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": false,
		"sourceMap": true,
		"target": "esnext",
		"lib": ["esnext", "dom"],
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"baseUrl": "./",
		"paths": {
			"~/*": ["app/*"]
		}
	},
	"exclude": ["node_modules"],
	"include": ["index.js", "app", "colors.js"],
	"extends": "expo/tsconfig.base",
	"ts-node": {
		"compilerOptions": {
			"target": "ES6",
			"module": "CommonJS",
			"esModuleInterop": true
		}
	}
}